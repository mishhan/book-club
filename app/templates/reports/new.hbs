  addSpeaker=(action "showSpeakerModal") addBook=(action "showBookModal") addCancel=(action "add")}}

{{#modal-dialog header="New Speaker" isOpen=showSpeakerModal}}
  {{speaker-form speaker=newSpeaker addCancel=(action "closeSpeakerModal")}}
