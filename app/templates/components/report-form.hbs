<form>
  <div class="form-group">
    <label for="date">Date</label>
    <div class="form-row h-100 justify-content-center align-items-center">
      <div class="col-12">
        <div class="input-group">
          <input id="report-date" type="text" class="form-control" value={{report.date}}>
          <div class="input-group-append">
            <span class="input-group-text far non-block fa-lg fa-calendar-alt"></span>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label for="speaker">Speaker</label>
    <div class="form-row h-100 justify-content-center align-items-center">
      <div class="col-10">
        <PowerSelect @options={{this.speakers}} @selected={{report.speaker}} @searchField="fullName"
          @onchange={{action (mut report.speaker)}} as |speaker|>
          <img src={{speaker.avatar}} class="box-icon" alt="Problem loading image..">
          <strong>{{speaker.fullName}}</strong>
        </PowerSelect>
      </div>
      <div class="col-2">
        <button type="button" class="btn btn-secondary" onclick={{addSpeaker}}>
          <i class="fas fa-external-link-alt"></i>
        </button>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label for="book">Book</label>
    <div class="form-row h-100 justify-content-center align-items-center">
      <div class="col-10">
        <PowerSelect @options={{this.books}} @selected={{report.book}} @searchField="name"
          @onchange={{action (mut report.speaker)}} as |book|>
          <img src={{book.image}} class="box-icon" alt="Not found.." onerror="this.src='/assets/book.jpg'">
          <strong>{{book.name}}</strong><span> {{book.author}}</span>
        </PowerSelect>
      </div>
      <div class="col-2">
        <button type="button" class="btn btn-secondary" onclick={{addBook}}>
          <i class="fas fa-external-link-alt"></i>
        </button>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label for="review">Review</label>
    {{textarea class="form-control" id="review" value=report.review}}
  </div>
  <div class="form-group">
    <label for="video">Video</label>
    {{input id="video" type="text" class="form-control" value=report.link}}
  </div>
  <div class="form-group">
    <label for="presentation">Presentation</label>
    <div class="form-row">
      <div class="col-md-3 col-sm-8 col-12">
        <input type="file" class="form-control-file" id="presentation">
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-md-6 offset-md-6 col-8 offset-4 text-right">
        <button type="button" class="btn btn-primary" onclick={{action "cancel"}}>
          <i class="far fa-times-circle"></i>
        </button>
        <button type="button" class="btn btn-success" onclick={{action "add"}}>
          <i class="fas fa-check"></i>
        </button>
      </div>
    </div>
  </div>
</form>