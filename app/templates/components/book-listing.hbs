<div class="col-xs-12 col-sm-6 col-md-4 mb-2">
  <div class="card">
    {{#if book.image}}
      <img src={{book.image}} class="card-img-top" alt="Problem loading image...">
    {{else}}
      <img src="assets/book.jpg" class="card-img-top" alt="Problem loading image...">
    {{/if}}
    <div class="card-body">
      <h4 class="card-title"><span class="name">{{book.name}}</span></h4>
      <hr>
      <p class="card-text">Author: <span class="author">{{book.author}}</span></p>
      <p class="card-text">Page count: <span class="page-count">{{book.pageCount}}</span></p>
      <p class="card-text">Middle rating: <span class="page-count">{{book.rating}}</span></p>
      <a href={{book.link}} target="_blank" rel="noopener noreferrer"
        class="btn btn-primary link {{if (not book.hasLink) "disabled"}}">
        <i class="fas fa-external-link-alt"></i>
      </a>
      {{#link-to "books.edit" book.id}}
        <button type="button" class="btn btn-secondary">
          <i class="far fa-edit"></i>
        </button>
      {{/link-to}}
      <button type="button" class="btn btn-danger" onclick={{action "deleteBook" book}}>
        <i class="far fa-trash-alt"></i>
      </button>
      {{#if book.hasReports}}
        <ul class="list-group mt-3">
          {{#each book.reports as |report|}}
            <li class="list-group-item">
              <span>{{report.speaker.fullName}}</span>
              <a href={{report.video}} class="btn btn-primary link {{if (not report.hasVideo) "disabled"}}">
                <i class="fab fa-youtube"></i>
              </a>
            </li>
          {{/each}}
        </ul>
      {{/if}}
    </div>
  </div>
</div>