<div id={{book.id}} class="card">
  {{#if book.image}}
    <img src={{book.image}} class="card-img-top" alt="Problem loading image...">
  {{else}}
    <img src="assets/book.jpg" class="card-img-top" alt="Problem loading image...">
  {{/if}}
  <div class="card-body">
    <h4 class="card-title"><span class="name">{{book.name}}</span></h4>
    <hr>
    <p class="card-text">Author: <span class="author">{{book.author}}</span></p>
    <p class="card-text">Page count: <span class="page-count">{{book.pageCount}}</span></p>
    <a href={{book.link}} class="btn btn-primary link">Купить</a>
  </div>
</div>