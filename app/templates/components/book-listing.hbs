<div class="col-xs-12 col-sm-6 col-md-4 mb-2">
  <div class="card">
    {{
      common/image-field 
      hasImage=book.hasImage
      imagePath=book.image
      defaultImage="assets/book.jpg"
      cssClass="card-img-top"
      altText="Problem loading image..."
    }}
    <div class="card-body">
      <h4 class="card-title"><span class="name">{{book.name}}</span></h4>
      <hr>
      <p class="card-text">Author: <span class="author">{{book.author}}</span></p>
      <p class="card-text">Page count: <span class="page-count">{{book.pageCount}}</span></p>
      <p class="card-text">Rating
        {{common/progress-field progress=book.scaledRating}}
      </p>
      <a href={{book.link}} target="_blank" rel="noopener noreferrer"
        class="btn btn-primary link {{if (not book.hasLink) "disabled"}}">
        <i class="fas fa-external-link-alt"></i>
      </a>
      {{#link-to "books.edit" book.id tagName="button" class="btn btn-secondary link"}}
          <i class="far fa-edit"></i>
      {{/link-to}}
      {{common/button-field cssClass="btn btn-danger" cssIconClass="far fa-trash-alt" onClick=(action "deleteBook" book)}}
      {{#if book.hasReports}}
        <ul class="list-group mt-3">
          {{#each book.reports as |report|}}
            <li class="list-group-item">
              <span>{{report.speaker.fullName}}</span>
              <a href={{report.video}} class="btn btn-primary link {{if (not report.hasVideo) "disabled"}}">
                <i class="fab fa-youtube"></i>
              </a>
            </li>
          {{/each}}
        </ul>
      {{/if}}
    </div>
  </div>
</div>